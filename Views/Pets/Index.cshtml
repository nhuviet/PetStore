<h1>Danh sách vật nuôi có bán tại cửa hàng</h1>

@*----------------FORM TIM KIEM------------*@
<form asp-controller="Pets" asp-action="Index" method="get">
    <select asp-for="PetPure" asp-items="Model.Purebred">
        <option value="">Tất cả</option>
    </select>
    <div class="box">
        <div class="container-2">
            <span class="icon"><i class="fa fa-search"></i></span>
            <input type="search" name="s" id="search" placeholder="Bạn muốn tìm loại boss nào?" />
        </div>
    </div>
</form>

<hr />

<div class="main container-2">
    <div class="container">
        <div class="row margin-bottom-40">
            <div class="col-md-12 sale-product">
                <div class="owl-carousel owl-carousel5">
                    <div>
                        @foreach (var item in Model.Pets)
                        {
                            <div class="product-item">
                                <div class="pi-img-wrapper">
                                    <a asp-action="Details" asp-route-id="@item.Id">
                                        <img src="@(@Html.DisplayFor(modelItem => item.Img))" class="img-responsive" id="my-image" />
                                    </a>
                                </div>

                                <h3><a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Species)</a></h3>

                                <button class="btn btn-default add2cart" onclick="msgbox()">Thêm vào giỏ hàng</button>
                                <div class="sticker sticker-sale"></div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







